---
const { title, description, icon, stats } = Astro.props;
---

<div class="bg-base-200 rounded-lg p-6 border border-base-300">
  <div class="flex items-start gap-4">
    {icon && (
      <div class="w-16 h-16 bg-primary rounded-lg flex items-center justify-center text-primary-content text-2xl flex-shrink-0">
        {icon}
      </div>
    )}
    <div class="flex-1">
      <h4 class="text-xl font-bold mb-2">{title}</h4>
      <p class="text-base-content/80 mb-4">{description}</p>
      {stats && (
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
          {stats.map((stat) => (
            <div class="text-center">
              <div class="text-2xl font-bold text-primary">{stat.value}</div>
              <div class="text-sm text-base-content/60">{stat.label}</div>
            </div>
          ))}
        </div>
      )}
      <slot />
    </div>
  </div>
</div>