---
const { title, subtitle, badge, technologies } = Astro.props;
---

<div class="card bg-base-100 shadow-xl border border-base-300 h-full">
  <div class="card-body">
    <div class="flex items-start justify-between mb-3">
      <h3 class="card-title text-lg flex-1">{title}</h3>
      {badge && (
        <div class="badge badge-primary badge-sm">{badge}</div>
      )}
    </div>
    <p class="text-sm text-base-content/70 mb-4">{subtitle}</p>
    <div class="text-sm leading-relaxed mb-4 flex-1">
      <slot />
    </div>
    {technologies && (
      <div class="mt-auto">
        <div class="text-xs font-semibold text-base-content/60 mb-2">Key Technologies:</div>
        <div class="flex flex-wrap gap-1">
          {technologies.map((tech) => (
            <span class="badge badge-outline badge-xs">{tech}</span>
          ))}
        </div>
      </div>
    )}
  </div>
</div>